server {
    server_name third.play-team.online www.third.play-team.online;

    listen 192.168.0.197:80;

    charset off;
    index index.html;

    # СНАЧАЛА задаём root_path, потом используем в disable_symlinks
    set $root_path /var/www/girl-app/dist;
    root $root_path;

    disable_symlinks if_not_owner from=$root_path;

    include /etc/nginx/vhosts-includes/*.conf;
    include /etc/nginx/vhosts-resources/third.play-team.online/*.conf;

    access_log /var/www/httpd-logs/third.play-team.online.access.log;
    error_log  /var/www/httpd-logs/third.play-team.online.error.log notice;

    ssi on;

    gzip on;
    gzip_comp_level 5;
    gzip_disable "msie6";
    gzip_types text/plain text/css application/json application/x-javascript text/xml application/xml application/xml+rss text/javascript application/javascript image/svg+xml;

    # index.html НЕ кешируем
    location = /index.html {
        add_header Cache-Control "no-cache";
        try_files $uri =404;
    }

    # ассеты Vite кешируем надолго
    location ^~ /assets/ {
        expires 365d;
        add_header Cache-Control "public, max-age=31536000, immutable";
        try_files $uri =404;
    }

    # прочая статика (если будет)
    location ~* \.(jpg|jpeg|gif|png|svg|js|css|mp3|ogg|mpe?g|avi|zip|gz|bz2?|rar|swf|webp|woff|woff2)$ {
        expires 24h;
    }

    location /api/chats/stream {
        proxy_pass http://127.0.0.1:4000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_read_timeout 3600s;
        proxy_send_timeout 3600s;
    }

    location /api/ {
        proxy_pass http://127.0.0.1:4000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location ^~ /uploads/ {
        proxy_pass http://127.0.0.1:4000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # SPA fallback
    location / {
        try_files $uri $uri/ /index.html;
    }
}

server {
    server_name third.play-team.online www.third.play-team.online;

    listen 192.168.0.197:443 ssl;

    ssl_certificate     "/var/www/httpd-cert/www-root/third.play-team.online_le2.crtca";
    ssl_certificate_key "/var/www/httpd-cert/www-root/third.play-team.online_le2.key";

    ssl_ciphers EECDH:+AES256:-3DES:RSA+AES:!NULL:!RC4;
    ssl_prefer_server_ciphers on;
    ssl_protocols TLSv1 TLSv1.1 TLSv1.2 TLSv1.3;
    ssl_dhparam /etc/ssl/certs/dhparam4096.pem;

    charset off;
    index index.html;

    set $root_path /var/www/girl-app/dist;
    root $root_path;

    disable_symlinks if_not_owner from=$root_path;

    include /etc/nginx/vhosts-includes/*.conf;
    include /etc/nginx/vhosts-resources/third.play-team.online/*.conf;

    access_log /var/www/httpd-logs/third.play-team.online.access.log;
    error_log  /var/www/httpd-logs/third.play-team.online.error.log notice;

    ssi on;

    gzip on;
    gzip_comp_level 5;
    gzip_disable "msie6";
    gzip_types text/plain text/css application/json application/x-javascript text/xml application/xml application/xml+rss text/javascript application/javascript image/svg+xml;

    location = /index.html {
        add_header Cache-Control "no-cache";
        try_files $uri =404;
    }

    location ^~ /assets/ {
        expires 365d;
        add_header Cache-Control "public, max-age=31536000, immutable";
        try_files $uri =404;
    }

    location ~* \.(jpg|jpeg|gif|png|svg|js|css|mp3|ogg|mpe?g|avi|zip|gz|bz2?|rar|swf|webp|woff|woff2)$ {
        expires 24h;
    }

    location /api/chats/stream {
        proxy_pass http://127.0.0.1:4000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_read_timeout 3600s;
        proxy_send_timeout 3600s;
    }

    location /api/ {
        proxy_pass http://127.0.0.1:4000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location ^~ /uploads/ {
        proxy_pass http://127.0.0.1:4000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location / {
        try_files $uri $uri/ /index.html;
    }
}
